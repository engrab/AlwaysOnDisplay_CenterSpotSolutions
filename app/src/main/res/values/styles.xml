<?xml version="1.0" encoding="utf-8"?>
<resources >

    <style name="AppTheme_NoActionBar" parent="@style/Theme.Design.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/actionBarBg</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="CustomTextAppearanceCal" parent="@style/res_2131820923_textappearance_materialcalendarwidget_weekday">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="res_2131820923_textappearance_materialcalendarwidget_weekday" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomTextAppearanceCalDay" parent="@style/res_2131820921_textappearance_materialcalendarwidget_date">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="res_2131820921_textappearance_materialcalendarwidget_date" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.TabLayout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/purple_500</item>-->
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
