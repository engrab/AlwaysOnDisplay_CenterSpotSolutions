<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/relative_Layout_wid2layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/digital8"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:fontFamily="@font/agencyfb"
            android:format12Hour="hh"
            android:singleLine="true"
            android:text="04"
            android:textColor="@color/digi8"
            android:textSize="@dimen/_40sdp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextClock
                android:id="@+id/text_view_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="none"
                android:fontFamily="@font/agencyfb"
                android:format12Hour="mm"
                android:singleLine="true"
                android:text="50"
                android:textColor="@color/digi8"
                android:textSize="@dimen/_40sdp"
                android:textStyle="bold" />

            <TextClock
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_toEndOf="@+id/text_view_Time"
                android:ellipsize="none"
                android:fontFamily="@font/agencyfb"
                android:format12Hour="aa"
                android:gravity="center"
                android:singleLine="true"
                android:text="PM"
                android:textColor="@color/digi8bg"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/_5sdp"
            android:ellipsize="none"
            android:fontFamily="@font/agencyfb"
            android:format12Hour="EEEE yyyy"
            android:singleLine="true"
            android:text="MONDAY 2020"
            android:textColor="@color/digi3"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_Layout_wid2layout"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@color/digi8"
            android:ellipsize="none"
            android:fontFamily="@font/agencyfb"
            android:format12Hour="dd MMM"
            android:gravity="center"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:singleLine="true"
            android:text="15 Nov"
            android:textColor="@color/digi8bg"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
