<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/relative_Layout_wid2layout"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_270sdp"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/smart_background" />

        <TextView
            android:id="@+id/text_view_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_20sdp"
            android:fontFamily="@font/agencyfb"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"
            app:drawableEndCompat="@drawable/icon_baseline_battery_full" />

        <TextClock
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/layout_circle9"
            android:ellipsize="none"
            android:fontFamily="@font/agencyfb"
            android:format12Hour="EEE"
            android:gravity="center"
            android:singleLine="true"
            android:text="wed"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <TextClock
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/layout_circle9"
            android:ellipsize="none"
            android:fontFamily="@font/agencyfb"
            android:format12Hour="MMM"
            android:gravity="center"
            android:singleLine="true"
            android:text="Dec"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <TextClock
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/layout_circle9"
            android:ellipsize="none"
            android:fontFamily="@font/agencyfb"
            android:format12Hour="yyyy"
            android:gravity="center"
            android:singleLine="true"
            android:text="2020"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <RelativeLayout
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerInParent="true">

            <TextClock
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/layout_circle9"
                android:ellipsize="none"
                android:fontFamily="@font/agencyfb"
                android:format12Hour="dd"
                android:gravity="center"
                android:singleLine="true"
                android:text="25"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />
        </RelativeLayout>

        <com.centerspotsolutions.blackscreenclock.lockscreenclockdisplay.superamoled.smartnightclock.utils.CustomAnalogClockView
            android:id="@+id/selectedClock"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_centerInParent="true"
            android:scaleX="0.42"
            android:scaleY="0.42" />
    </RelativeLayout>
</RelativeLayout>
