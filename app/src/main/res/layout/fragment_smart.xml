<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:background="@color/contrast"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/smart_background" />

                    <ImageView
                        android:id="@+id/preiew_pre_img5"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_centerInParent="true"
                        android:onClick="analogClockShow"
                        android:src="@drawable/pre_2_smart_5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/blue"
                        android:fontFamily="@font/airstrike"
                        android:text="Tuesday"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/blue"
                        android:fontFamily="@font/airstrike"
                        android:text="6 March 2001"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:background="@color/contrast"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/smart_background" />

                    <ImageView
                        android:id="@+id/preiew_pre_img6"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_centerInParent="true"
                        android:onClick="analogClockShow"
                        android:src="@drawable/pre_9_smart_6" />

                    <TextClock
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/layout_circle9"
                        android:ellipsize="none"
                        android:fontFamily="@font/agencyfb"
                        android:format12Hour="MMM"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Mon"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_7ssp" />

                    <TextClock
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/layout_circle9"
                        android:ellipsize="none"
                        android:fontFamily="@font/agencyfb"
                        android:format12Hour="MMM"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Dec"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_7ssp" />

                    <TextClock
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/layout_circle9"
                        android:ellipsize="none"
                        android:fontFamily="@font/agencyfb"
                        android:format12Hour="MMM"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="20"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_7ssp" />

                    <TextView
                        android:id="@+id/text_view_battery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/agencyfb"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15ssp"
                        app:drawableEndCompat="@drawable/icon_baseline_battery_full" />
                </RelativeLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:background="@color/contrast"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/preiew_pre_img10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:onClick="analogClockShow"
                        android:src="@drawable/preview_img_smart_pre_8" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@color/contrast"
                    android:padding="@dimen/_5sdp">


                    <ImageView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/smart_background" />

                    <ImageView
                        android:id="@+id/preiew_pre_img7"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_centerInParent="true"
                        android:onClick="analogClockShow"
                        android:src="@drawable/pre_smart_126" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/agencyfb"
                        android:text="Tuesday"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@font/agencyfb"
                        android:text="6 March 2001"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:background="@color/contrast"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/smart_background" />

                    <ImageView
                        android:id="@+id/preiew_pre_img8"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_centerInParent="true"
                        android:onClick="analogClockShow"
                        android:src="@drawable/pre_smart_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/blue"
                        android:fontFamily="@font/aspirin_advance"
                        android:text="Tuesday"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/blue"
                        android:fontFamily="@font/aspirin_advance"
                        android:text="6 March 2001"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:background="@color/contrast"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/preiew_pre_img9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:onClick="analogClockShow"
                        android:src="@drawable/preview_img_smart_pre_6" />
                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@color/contrast"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/preiew_pre_img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:onClick="analogClockShow"
                        android:src="@drawable/preview_img_smart_pre_1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:background="@color/contrast"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/preiew_pre_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:onClick="analogClockShow"
                        android:src="@drawable/preview_img_smart_pre_5" />
                </RelativeLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@color/contrast"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/preiew_pre_img4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:onClick="analogClockShow"
                        android:src="@drawable/preview_img_smart_pre_4" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/preiew_pre_img3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:background="@color/contrast"
                    android:onClick="analogClockShow"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/preview_img_smart_pre_3" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:orientation="horizontal"
                android:weightSum="2">


                <ImageView
                    android:id="@+id/preiew_img11"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:background="@color/contrast"
                    android:onClick="analogClockShow"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/preview_img_smart_pre_11" />

                <ImageView
                    android:id="@+id/preiew_pre_img12"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_weight="1"
                    android:background="@color/contrast"
                    android:onClick="analogClockShow"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/preview_img_smart_pre_12" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
