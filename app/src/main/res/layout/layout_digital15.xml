<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_210sdp"
        android:layout_centerInParent="true"
        android:background="@drawable/digital15circle">

        <LinearLayout
            android:id="@+id/relative_Layout_wid2layout"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="#ff0068"
                android:ellipsize="none"
                android:format12Hour="EEEE"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:singleLine="true"
                android:text="Monday"
                android:textColor="@color/digi5"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextClock
                    android:id="@+id/text_view_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:format12Hour="hh"
                    android:singleLine="true"
                    android:text="04"
                    android:textColor="#00ff67"
                    android:textSize="@dimen/_40sdp"
                    android:textStyle="bold" />

                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:format12Hour=":mm"
                    android:singleLine="true"
                    android:text=":50"
                    android:textColor="@color/digi5"
                    android:textSize="@dimen/_40sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextClock
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="none"
                        android:format12Hour="aa"
                        android:singleLine="true"
                        android:text="PM"
                        android:textColor="#ff0068"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <TextClock
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="none"
                        android:format12Hour="ss"
                        android:singleLine="true"
                        android:text="45"
                        android:textColor="#ff0068"
                        android:textSize="@dimen/_17sdp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#ff0068"
                android:ellipsize="none"
                android:format12Hour="dd MMMM yyyy"
                android:gravity="center"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingRight="@dimen/_6sdp"
                android:singleLine="true"
                android:text="15 November 2021"
                android:textColor="@color/digi5"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
