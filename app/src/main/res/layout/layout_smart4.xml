<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/relative_Layout_wid2layout"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_270sdp"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/smart_background" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/bluegg"
            android:ellipsize="none"
            android:fontFamily="@font/agencyfb"
            android:format12Hour="dd MMM yyyy"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:text="12 december 2020"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextClock
                    android:id="@+id/text_view_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:fontFamily="@font/agencyfb"
                    android:format12Hour="hh"
                    android:singleLine="true"
                    android:text="04"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_60sdp"
                    android:textStyle="bold" />

                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:fontFamily="@font/agencyfb"
                    android:format12Hour="mm"
                    android:singleLine="true"
                    android:text="50"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_60sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:orientation="vertical">

                <TextClock
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/layout_circle_"
                    android:ellipsize="none"
                    android:fontFamily="@font/agencyfb"
                    android:format12Hour="aa"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="am"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_28sdp" />

                <TextClock
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:background="@drawable/layout_circle_"
                    android:ellipsize="none"
                    android:fontFamily="@font/agencyfb"
                    android:format12Hour="EEE"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Fri"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_28sdp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_20sdp"
            android:fontFamily="@font/agencyfb"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"
            app:drawableEndCompat="@drawable/icon_baseline_battery_full" />
    </RelativeLayout>
</RelativeLayout>
