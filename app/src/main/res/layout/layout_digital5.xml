<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/relative_Layout_wid2layout"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/digi5bg"
            android:ellipsize="none"
            android:fontFamily="@font/agencyfb"
            android:format12Hour="EEEE"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:singleLine="true"
            android:text="Monday"
            android:textColor="@color/digi5"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:background="@drawable/digital5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextClock
                android:id="@+id/text_view_Time"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="wrap_content"
                android:ellipsize="none"
                android:fontFamily="@font/agencyfb"
                android:format12Hour="hh:mm:ss"
                android:singleLine="true"
                android:text="04:50:22"
                android:textColor="@color/digi5"
                android:textSize="@dimen/_40sdp"
                android:textStyle="bold" />

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:ellipsize="none"
                android:fontFamily="@font/agencyfb"
                android:format12Hour="aa"
                android:singleLine="true"
                android:text="PM"
                android:textColor="@color/digi5"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/digi5bg"
            android:ellipsize="none"
            android:fontFamily="@font/agencyfb"
            android:format12Hour="dd MMMM"
            android:gravity="center"
            android:paddingLeft="@dimen/_6sdp"
            android:paddingRight="@dimen/_6sdp"
            android:singleLine="true"
            android:text="15 November"
            android:textColor="@color/digi5"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
